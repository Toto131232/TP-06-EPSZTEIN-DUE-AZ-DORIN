@{
    ViewData["Title"] = "Compartir tarea";
    var tareas = ViewBag.Tareas as IEnumerable<dynamic>; // { Id, Titulo }
    var usuarios = ViewBag.Usuarios as IEnumerable<dynamic>; // { Id, NombreUsuario }
}

<h1>ToDoList</h1>
<div class="container">
    <form asp-action="CompartirTarea" method="post" class="form-card">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="Tarea">Tarea</label>
            <select id="Tarea" name="TareaId" required>
                <option value="" selected disabled>-- Seleccionar --</option>
                @if (tareas != null)
                {
                    foreach (var t in tareas)
                    {
                        <option value="@t.Id">@t.Titulo</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Id">Compartir con</label>
            <select id="Id" name="Id" required>
                <option value="" selected disabled>Seleccionar un usuario</option>
                @if (usuarios != null)
                {
                    foreach (var u in usuarios)
                    {
                        <option value="@u.Id">@u.NombreUsuario</option>
                    }
                }
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-secondary">Compartir</button>
        </div>
    </form>
</div>

<style>
/* Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

/* Contenedor */
.container {
    max-width: 640px;
    margin: 50px auto;
    padding: 20px;
}

/* TÃ­tulo */
